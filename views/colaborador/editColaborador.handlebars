<h1>Editando Colaborador: {{colaborador.nome}} {{colaborador.sobrenome}} </h1>

<div >

  <form action="/colaborador/edit" method="post" class="form-editar">

    <div>
      <input type="hidden" name="id" value="{{colaborador.id}}">
      <div>
        <label class="label-editar" for="nome">Nome:</label>
        <input type="text" class="input-editar" name="nome" value="{{colaborador.nome}}"/>
      </div>
    </div>

    <div>
      <div>
        <label class="label-editar" for="sobrenome">Sobrenome:</label>
        <input type="text" class="input-editar" name="sobrenome" value="{{colaborador.sobrenome}}"/>
      </div>
    </div>

    <div>
      <div>
        <label class="label-editar" for="data_nascimento">Data de Nascimento:</label>
        <input type="text" class="input-editar" name="data_nascimento" value="{{colaborador.data_nascimento}}"/>
      </div>
    </div>
  <div>
        <label class="label-editar" for="cpf">CPF:</label>
        <input type="text" class="input-editar" name="cpf" value="{{colaborador.cpf}}"/>
      </div>
    </div>
      <div>
        <label class="label-editar" for="funcao">Função:</label>
        <input type="text" class="input-editar" name="funcao" value="{{colaborador.funcao}}"/>
      </div>
    </div>
      <div>
        <label class="label-editar" for="login">Login:</label>
        <input type="text" class="input-editar" name="login" value="{{colaborador.login}}"/>
      </div>
    </div>
      <div>
        <label class="label-editar" for="senha">Senha:</label>
        <input type="text" class="input-editar" name="senha" value="{{colaborador.senha}}"/>
      </div>
    </div>
    <div>
      <input type="submit" value="Atualizar" class="btn-editar">
    </div>

  </form>

</div>