<h1>Editando {{cliente.nome}} </h1>

<div >

  <form action="/clientes/edit" method="post" class="form-editar">

    <div>
      <input type="hidden" name="id" value="{{cliente.id}}">
      <div>
        <label class="label-editar" for="nome">Nome:</label>
        <input type="text" class="input-editar" name="nome" value="{{cliente.nome}}"/>
      </div>
    </div>

    <div>
      <div>
        <label class="label-editar" for="sobrenome">Sobrenome:</label>
        <input type="text" class="input-editar" name="sobrenome" value="{{cliente.sobrenome}}"/>
      </div>
    </div>

    <div>
      <div>
        <label class="label-editar" for="data_nascimento">Data de Nascimento:</label>
        <input type="text" class="input-editar" name="data_nascimento" value="{{cliente.data_nascimento}}"/>
      </div>
    </div>

    <div>
      <div>
        <label class="label-editar" for="cpf">CPF:</label>
        <input type="number" class="input-editar" name="cpf" value="{{cliente.cpf}}"/>
      </div>
    </div>

    <div>
      <input type="submit" value="Atualizar" class="btn-editar">
    </div>

  </form>

</div>