<div class="d-flex justify-content-center">
    <h1 class="center">Cadastrar Funcionario</h1>
</div>
<div class="boxCarro">
    <form action="/colaborador/add" class="p-2" method="post">
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="nome" placeholder="Digite o Nome">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Sobrenome</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="sobrenome" placeholder="Digite o Sobrenome">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Data de Nascimento</label>
            <div class="col-sm-8">
                <input type="date" class="form-control" name="dataNascimento">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">CPF</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="cpf" placeholder="Informe seu CPF">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Função</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="funcao" placeholder="Informe qual a sua Função">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Usuario</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="usuario" placeholder="Crie seu Usuario">
            </div>
        </div>
        <div class="row mb-2">
            <label class="col-sm-2 col-form-label">Senha</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" name="senha" placeholder="Crie sua senha">
            </div>
        </div>
        <input type="submit" value="Cadastrar">
    </form>
</div>